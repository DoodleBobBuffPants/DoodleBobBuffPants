{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "ES2022"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "jsx": "react-jsx",
    "baseUrl": "src",
    "rootDir": "./src",
    "outDir": "./dist",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "types": ["vite/client", "vitest/globals"]
  },
  "include": ["./src"]
}
